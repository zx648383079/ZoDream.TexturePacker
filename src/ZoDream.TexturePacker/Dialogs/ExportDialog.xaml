<?xml version="1.0" encoding="utf-8" ?>
<ContentDialog
    x:Class="ZoDream.TexturePacker.Dialogs.ExportDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ZoDream.TexturePacker.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="导出"
    PrimaryButtonText="确认"
    SecondaryButtonText="取消"
    mc:Ignorable="d">

    <StackPanel>
        <ComboBox Header="导出内容">
            <ComboBoxItem Content="选中层" />
            <ComboBoxItem Content="合并文件" />
            <ComboBoxItem Content="拆分文件" />
        </ComboBox>
        <ComboBox Header="导出格式">
            <ComboBoxItem Content="PNG" />
            <ComboBoxItem Content="Unity" />
            <ComboBoxItem Content="Godot" />
            <ComboBoxItem Content="Egret" />
            <ComboBoxItem Content="TexturePacker" />
        </ComboBox>
    </StackPanel>
</ContentDialog>
